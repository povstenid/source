[Unit]
Description=PNAT DHCP Server (dnsmasq)
After=network-online.target pnat.service
PartOf=pnat.service

[Service]
Type=simple
ExecStart=/usr/sbin/dnsmasq --conf-file=/etc/pnat/dnsmasq.conf --keep-in-foreground --log-facility=-
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
